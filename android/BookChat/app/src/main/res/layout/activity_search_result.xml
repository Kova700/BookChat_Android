    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SearchResultActivity">

        <ProgressBar
            android:id="@+id/loading_progressBar"
            android:elevation="11dp"
            android:visibility="@{viewModel.isLoading() ? View.VISIBLE : View.GONE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/Search_window"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/search_background"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/test_search_btn_Before"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/search_icon_searchpage" />

                    <EditText
                        android:id="@+id/searchText_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="64dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/jua_regular"
                        android:hint="책을 검색해주세요!"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:textColor="#12121D"
                        android:textColorHint="#B0B0B4" />

                    <ImageView
                        android:id="@+id/search_option_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/searchfilter_icon" />

                    <ImageView
                        android:id="@+id/search_window_delete_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:onClick="@{() -> activity.clearSearchText()}"
                        android:layout_marginTop="22dp"
                        android:src="@drawable/search_window_delete" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/search_window_cencel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="취소"
                    android:onClick="@{() -> activity.clickCancleBtn()}"
                    android:textColor="#BBBBBB"
                    android:fontFamily="@font/jua_regular"
                    android:textSize="23sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="52dp"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/search_result_book_clicked_btn"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/search_result_chat_unclick_btn"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua_regular"
                        android:textColor="#B8B8BB"
                        android:text="검색 결과 :  "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua_regular"
                        android:textColor="#12121D"
                        android:text="@{String.valueOf(viewModel.books.size())}"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jua_regular"
                        android:textColor="#12121D"
                        android:text=" 개"/>
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/search_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="800dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/search_result_background">

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/empty_result_img"
                    android:layout_gravity="center"
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:src="@drawable/empty_result"/>
                <TextView
                    android:visibility="invisible"
                    android:id="@+id/empty_result_text"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="해당 검색결과가 없습니다."
                    android:fontFamily="@font/jua_regular"
                    android:textColor="#000000"
                    android:textSize="23sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/book_search_result_rcyView"
                    android:layout_marginHorizontal="30dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    setItem="@{viewModel.books}"
                    tools:listitem="@layout/item_book_search_result"/>
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

