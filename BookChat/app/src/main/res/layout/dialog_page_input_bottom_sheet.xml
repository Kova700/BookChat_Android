<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="com.example.bookchat.ui.viewmodel.PageInputDialogViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_blue_book_mark"
            app:layout_constraintEnd_toEndOf="@+id/materialButton"
            app:layout_constraintStart_toStartOf="@+id/materialButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_bold"
            android:text="책갈피"
            android:textColor="#222222"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:elegantTextHeight="true"
                android:focusable="false"
                android:text="@={viewmodel.inputedPage}"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="#222222"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="22sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:text="p"
            android:textColor="#4C4C4C"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="@+id/materialButton3"
            app:layout_constraintStart_toEndOf="@+id/materialButton2"
            app:layout_constraintTop_toTopOf="@+id/cardView3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="1"
            android:onClick="@{() -> viewmodel.inputNumber(1)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="2"
            android:onClick="@{() -> viewmodel.inputNumber(2)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton3"
            app:layout_constraintStart_toEndOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="3"
            android:onClick="@{() -> viewmodel.inputNumber(3)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialButton2"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="4"
            android:onClick="@{() -> viewmodel.inputNumber(4)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="5"
            android:onClick="@{() -> viewmodel.inputNumber(5)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton3"
            app:layout_constraintStart_toEndOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/materialButton2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/bottom_slide_btn_color"
            android:stateListAnimator="@null"
            android:text="6"
            android:onClick="@{() -> viewmodel.inputNumber(6)}"
            android:background="#00000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialButton2"
            app:layout_constraintTop_toBottomOf="@+id/materialButton3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/bottom_slide_btn_color"
            android:stateListAnimator="@null"
            android:text="7"
            android:onClick="@{() -> viewmodel.inputNumber(7)}"
            android:background="#00000000"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialButton4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="8"
            android:onClick="@{() -> viewmodel.inputNumber(8)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton3"
            app:layout_constraintStart_toEndOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/materialButton5" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="9"
            android:onClick="@{() -> viewmodel.inputNumber(9)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/materialButton2"
            app:layout_constraintTop_toBottomOf="@+id/materialButton6" />


        <com.example.bookchat.ui.customview.AntiDupClickButton
            android:id="@+id/materialButton10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="확인"
            android:onClick="@{() -> viewmodel.clickFinishBtn()}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/materialButton11"
            app:layout_constraintEnd_toStartOf="@+id/materialButton2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialButton8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:stateListAnimator="@null"
            android:text="0"
            android:onClick="@{() -> viewmodel.inputNumber(0)}"
            android:background="#00000000"
            android:textColor="@color/bottom_slide_btn_color"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/materialButton3"
            app:layout_constraintStart_toEndOf="@+id/materialButton"
            app:layout_constraintTop_toBottomOf="@+id/materialButton8" />

        <!--버튼 색도 눌렸을 때 파란색으로 변경-->
        <ImageButton
            android:id="@+id/materialButton12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/notosanskr_regular"
            android:src="@drawable/ic_bottom_slide_delete_btn"
            android:stateListAnimator="@null"
            android:background="#00000000"
            android:textSize="22sp"
            android:onClick="@{() -> viewmodel.deleteNumber()}"
            app:layout_constraintBottom_toBottomOf="@+id/materialButton11"
            app:layout_constraintEnd_toEndOf="@+id/materialButton9"
            app:layout_constraintStart_toEndOf="@+id/materialButton2"
            app:layout_constraintTop_toBottomOf="@+id/materialButton9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
