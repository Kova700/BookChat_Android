<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="agonyListItem"
            type="com.example.bookchat.ui.agony.model.AgonyListItem.Item" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_round_white">

        <androidx.cardview.widget.CardView
            android:id="@+id/background_agony_edit_folder_cv"
            setAgonyFolderEdittingBackgroundTint="@{agonyListItem.selected}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:minHeight="124dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_agony_edit_folder_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:elegantTextHeight="true"
            android:elevation="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="start"
            android:maxLines="3"
            android:text="@{agonyListItem.title}"
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/background_agony_edit_folder_cv"
            app:layout_constraintEnd_toEndOf="@+id/background_agony_edit_folder_cv"
            app:layout_constraintStart_toStartOf="@+id/background_agony_edit_folder_cv"
            app:layout_constraintTop_toTopOf="@+id/background_agony_edit_folder_cv" />

        <ImageView
            setAgonyFolderEditingCheckedVisibility="@{agonyListItem.selected}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/item_check_icon"
            app:layout_constraintBottom_toBottomOf="@+id/background_agony_edit_folder_cv"
            app:layout_constraintEnd_toEndOf="@+id/background_agony_edit_folder_cv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
