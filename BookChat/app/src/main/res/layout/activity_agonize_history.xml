<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewmodel"
            type="com.example.bookchat.viewmodel.AgonizeHistoryViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.AgonizeHistoryActivity">

        <com.example.bookchat.AntiDupClickImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="27dp"
            android:onClick="@{() -> viewmodel.clickBackBtn()}"
            android:background="?android:selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_btn" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_bold"
            android:text="고민기록"
            android:textColor="#222222"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            app:layout_constraintStart_toEndOf="@+id/back_btn"
            app:layout_constraintTop_toTopOf="@+id/back_btn" />

        <com.example.bookchat.AntiDupClickImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="30dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_wastebasket_btn"
            app:layout_constraintBottom_toBottomOf="@+id/back_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back_btn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bookBackground_agonize"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#F6F6F6"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/back_btn"
            tools:layout_editor_absoluteX="30dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bookCardView_agonize"
            android:layout_width="70dp"
            android:layout_height="108dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/bookBackground_agonize"
            app:layout_constraintStart_toStartOf="@+id/bookBackground_agonize"
            app:layout_constraintTop_toTopOf="@+id/bookBackground_agonize">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                loadUrl="@{viewmodel.book.bookCoverImageUrl}"
                android:src="@drawable/ex_book6" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            setSelected="@{Boolean.TRUE}"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp"
            android:elegantTextHeight="true"
            android:elevation="10dp"
            android:fontFamily="@font/notosanskr_bold"
            android:text="@{viewmodel.book.title}"
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/bookCardView_agonize"
            app:layout_constraintTop_toTopOf="@+id/bookCardView_agonize" />

        <TextView
            setSelected="@{Boolean.TRUE}"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="8dp"
            android:elegantTextHeight="true"
            android:elevation="10dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/notosanskr_regular"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@{viewmodel.book.authors[0]}"
            android:textColor="#373737"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@+id/bookCardView_agonize"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />


   </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
