<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.bookchat.ui.bookreport.BookReportViewModel" />
    </data>

    <ScrollView
        android:id="@+id/bookReport_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/edit_state_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="book_report_register_btn, book_report_Input_layout, book_report_title_et, titleContentSeparator, book_report_content_et" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/success_state_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="book_report_delete_btn, book_report_revise_btn, book_report_title_tv, book_report_content_tv, book_report_created_date_tv" />

            <com.example.bookchat.ui.customview.AntiDupClickImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="27dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewmodel.onClickBackBtn()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_back_btn" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="@string/book_report"
                android:textColor="#222222"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/back_btn"
                app:layout_constraintStart_toEndOf="@+id/back_btn"
                app:layout_constraintTop_toTopOf="@+id/back_btn" />

            <!--수정 버튼 (SUCCESS)-->
            <com.example.bookchat.ui.customview.AntiDupClickImageButton
                android:id="@+id/book_report_revise_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="30dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewmodel.onClickReviseBtn()}"
                android:src="@drawable/ic_pencil_btn"
                app:layout_constraintBottom_toBottomOf="@+id/back_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_btn" />

            <!--삭제 버튼 (SUCCESS)-->
            <com.example.bookchat.ui.customview.AntiDupClickImageButton
                android:id="@+id/book_report_delete_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="15dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewmodel.onClickDeleteBtn()}"
                android:src="@drawable/ic_wastebasket_btn"
                app:layout_constraintBottom_toBottomOf="@+id/book_report_revise_btn"
                app:layout_constraintEnd_toStartOf="@+id/book_report_revise_btn"
                app:layout_constraintTop_toTopOf="@+id/book_report_revise_btn" />

            <!--등록 버튼 (REVISE , EMPTY)-->
            <com.example.bookchat.ui.customview.AntiDupClickButton
                android:id="@+id/book_report_register_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_medium"
                android:onClick="@{() -> viewmodel.onClickRegisterBtn()}"
                android:stateListAnimator="@null"
                android:text="등록"
                android:textColor="#222222"
                app:layout_constraintBottom_toBottomOf="@+id/book_report_revise_btn"
                app:layout_constraintEnd_toEndOf="@+id/book_report_revise_btn"
                app:layout_constraintStart_toStartOf="@+id/book_report_delete_btn"
                app:layout_constraintTop_toTopOf="@+id/book_report_revise_btn" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bookBackground_agonize"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#F9F9F9"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/back_btn"
                tools:layout_editor_absoluteX="30dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bookCardView_agonize"
                android:layout_width="90dp"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@+id/bookBackground_agonize"
                app:layout_constraintStart_toStartOf="@+id/bookBackground_agonize"
                app:layout_constraintTop_toTopOf="@+id/bookBackground_agonize">

                <ImageView
                    loadUrl="@{viewmodel.uiState.bookshelfItem.book.bookCoverImageUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty_img" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/book_report_book_title_tv"
                setSelected="@{Boolean.TRUE}"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elegantTextHeight="true"
                android:elevation="10dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/notosanskr_bold"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{viewmodel.uiState.bookshelfItem.book.title}"
                android:textColor="#222222"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/bookCardView_agonize"
                app:layout_constraintStart_toStartOf="@+id/bookCardView_agonize"
                app:layout_constraintTop_toBottomOf="@+id/bookCardView_agonize" />

            <TextView
                android:id="@+id/book_report_book_authors_tv"
                setSelected="@{Boolean.TRUE}"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:elegantTextHeight="true"
                android:elevation="10dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@{viewmodel.uiState.bookshelfItem.book.authorsString}"
                android:textColor="#222222"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/book_report_book_title_tv"
                app:layout_constraintStart_toStartOf="@+id/book_report_book_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/book_report_book_title_tv" />

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/scaleRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:isIndicator="false"
                android:rating="@{viewmodel.uiState.bookshelfItem.star.value}"
                app:layout_constraintEnd_toEndOf="@+id/bookCardView_agonize"
                app:layout_constraintStart_toStartOf="@+id/bookCardView_agonize"
                app:layout_constraintTop_toBottomOf="@+id/book_report_book_authors_tv"
                app:srb_drawableEmpty="@drawable/ic_star_not_fill"
                app:srb_drawableFilled="@drawable/ic_star_fill"
                app:srb_isIndicator="true"
                app:srb_starPadding="2dp"
                app:srb_stepSize="0.5" />

            <!--로딩 (LOADING)-->
            <ProgressBar
                android:id="@+id/book_report_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/book_report_Input_layout"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout"
                app:layout_constraintTop_toTopOf="@+id/book_report_Input_layout" />

            <!--수정 배경 (REVISE , EMPTY)-->
            <androidx.cardview.widget.CardView
                android:id="@+id/book_report_Input_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="-20dp"
                android:backgroundTint="#F6F6F6"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/book_report_content_et"
                app:layout_constraintEnd_toEndOf="@+id/bookBackground_agonize"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/bookBackground_agonize"
                app:layout_constraintTop_toTopOf="@+id/book_report_title_et" />

            <!--수정 제목 (REVISE , EMPTY)-->
            <EditText
                android:id="@+id/book_report_title_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@null"
                android:elegantTextHeight="true"
                android:elevation="10dp"
                android:fontFamily="@font/notosanskr_bold"
                android:hint="@string/title"
                android:singleLine="true"
                android:textColorHint="#222222"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout"
                app:layout_constraintTop_toBottomOf="@+id/bookBackground_agonize" />

            <!--수정 제목,내용 구분자 (REVISE , EMPTY)-->
            <View
                android:id="@+id/titleContentSeparator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="7dp"
                android:background="#D9D9D9"
                app:layout_constraintBottom_toTopOf="@+id/book_report_content_et"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout"
                app:layout_constraintTop_toBottomOf="@+id/book_report_title_et" />

            <!--수정 내용 (REVISE , EMPTY)-->
            <EditText
                android:id="@+id/book_report_content_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="50dp"
                android:background="@null"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="top"
                android:hint="@string/content"
                android:minHeight="150dp"
                android:textColorHint="#373737"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout"
                app:layout_constraintTop_toBottomOf="@+id/titleContentSeparator" />

            <!--작성 제목 (SUCCESS)-->
            <TextView
                android:id="@+id/book_report_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="@{viewmodel.uiState.existingBookReport.reportTitle}"
                android:textColor="#222222"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/book_report_title_et"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout" />

            <!--작성 내용 (SUCCESS)-->
            <TextView
                android:id="@+id/book_report_content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_regular"
                android:lineSpacingExtra="10dp"
                android:minHeight="150dp"
                android:text="@{viewmodel.uiState.existingBookReport.reportContent}"
                android:textColor="#222222"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/book_report_Input_layout"
                app:layout_constraintStart_toStartOf="@+id/book_report_Input_layout"
                app:layout_constraintTop_toBottomOf="@+id/book_report_title_tv" />

            <!--작성 날짜 (SUCCESS)-->
            <TextView
                android:id="@+id/book_report_created_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_regular"
                android:text="@{viewmodel.uiState.existingBookReport.reportCreatedAt}"
                android:textColor="#373737"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/book_report_content_tv"
                app:layout_constraintTop_toBottomOf="@+id/book_report_content_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>
