<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="channel"
            type="com.example.bookchat.ui.search.model.SearchResultItem.ChannelItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/channel_image_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="8dp"
            android:layout_marginEnd="@dimen/default_margin"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--동적으로 크기 수정 예정-->
            <ImageView
                android:id="@+id/bookImg_iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#D9D9D9"
                android:scaleType="fitXY"
                android:src="@drawable/loading_img"
                channelDefaultImageType="@{channel.defaultRoomImageType}"
                imgUrl="@{channel.roomImageUri}" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chat_room_title_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/default_margin"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="#222222"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{channel.roomName}"
            app:layout_constraintEnd_toStartOf="@+id/channel_image_cv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/channel_image_cv" />

        <TextView
            android:id="@+id/chat_room_tags_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="@dimen/default_margin"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:textColor="#373737"
            android:textSize="12sp"
            android:ellipsize="end"
            android:text="@{channel.tagsString}"
            app:layout_constraintEnd_toStartOf="@+id/channel_image_cv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_title_et" />

        <TextView
            android:id="@+id/roommember_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginEnd="5dp"
            android:elegantTextHeight="true"
            android:maxLines="1"
            android:text="@{String.valueOf(channel.roomMemberCount) +'명'}"
            android:textColor="#373737"
            android:textSize="10sp"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/view4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_tags_tv" />

        <View
            android:id="@+id/view4"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9"
            android:layout_width="1dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/roommember_count_tv"
            app:layout_constraintEnd_toStartOf="@+id/last_chat_dispatch_time_tv"
            app:layout_constraintStart_toEndOf="@+id/roommember_count_tv"
            app:layout_constraintTop_toTopOf="@+id/roommember_count_tv" />

        <TextView
            android:id="@+id/last_chat_dispatch_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:textColor="#373737"
            android:textSize="10sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/channel_image_cv"
            app:layout_constraintStart_toEndOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_tags_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
