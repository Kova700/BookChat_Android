<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.example.bookchat.ui.channel.chatting.ChannelViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.channel.chatting.ChannelActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/channel_scrap_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.bookchat.ui.customview.AntiDupClickImageButton
                android:id="@+id/back_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:onClick="@{() -> viewmodel.onClickCancelCapture()}"
                app:layout_constraintBottom_toTopOf="@+id/top_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/x_icon" />

            <TextView
                android:id="@+id/channel_scrap_select_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:onClick="@{() -> viewmodel.onClickCancelCaptureSelection()}"
                android:padding="5dp"
                android:visibility="gone"
                android:text="@string/cancel_selection"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/top_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/chat_menu_btn" />

            <TextView
                android:id="@+id/channel_scrap_cancel_selection_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:onClick="@{() -> viewmodel.onClickCancelCaptureSelection()}"
                android:padding="5dp"
                android:text="@string/cancel_selection"
                android:textColor="#000000"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/top_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/chat_menu_btn" />

            <TextView
                android:id="@+id/channel_scrap_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elegantTextHeight="true"
                android:focusable="true"
                android:fontFamily="@font/notosanskr_medium"
                android:gravity="center"
                android:onClick="@{() -> viewmodel.onClickCompleteCapture()}"
                android:padding="5dp"
                android:text="@string/confirm"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/top_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/chat_menu_btn" />

            <TextView
                android:id="@+id/channel_scrap_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_bold"
                android:text="@string/channel_scrap"
                android:textColor="#000000"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/top_divider"
                app:layout_constraintEnd_toStartOf="@+id/channel_scrap_confirm_btn"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/back_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="#D9D9D9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/top_second_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="#D9D9D9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_divider" />

            <TextView
                android:id="@+id/channel_scrap_explanation_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:fontFamily="@font/notosanskr_medium"
                android:text="@string/channel_scrap_explanation_comment"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/top_second_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_divider" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
