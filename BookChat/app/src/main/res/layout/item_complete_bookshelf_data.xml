<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bookShelfItem"
            type="com.example.bookchat.data.BookShelfItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/swipe_background"
            layout="@layout/item_bookshelf_swipe_background" />

        <androidx.cardview.widget.CardView
            android:id="@+id/swipe_view"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="93dp"
                    android:layout_height="142dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        loadUrl="@{bookShelfItem.bookCoverImageUrl}"
                        android:src="@drawable/empty_img" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView13"
                    setSelected="@{Boolean.TRUE}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/notosanskr_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@{bookShelfItem.title}"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView14"
                    setSelected="@{Boolean.TRUE}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/notosanskr_regular"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="@{bookShelfItem.authors[0]}"
                    android:textColor="#373737"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView13" />

                <!--별점 바인딩하고 UI 위치 맞춰야함-->
                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    app:layout_constraintStart_toEndOf="@+id/cardView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    app:rating="@{bookShelfItem.star.value}"
                    app:srb_drawableEmpty="@drawable/ic_star_not_fill"
                    app:srb_drawableFilled="@drawable/ic_star_fill"
                    app:srb_isIndicator="true"
                    app:srb_starPadding="2dp"
                    app:srb_stepSize="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
