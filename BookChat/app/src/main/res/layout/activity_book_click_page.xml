<?xml version="1.0" encoding="utf-8"?>
<!--Lagercy-->
<layout>
    <data>
        <variable
            name="activity"
            type="com.example.bookchat.ui.activity.BookClickPageActivity" />
        <variable
            name="viewModel"
            type="com.example.bookchat.viewmodel.SearchResultBookPageViewModel" />
    </data>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.BookClickPageActivity">


        <ImageView
            android:id="@+id/bookimgBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ex_book2"
            loadUrl="@{activity.book.bookCoverImageUrl}"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D9BDBDBD"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="440dp"
            android:layout_marginHorizontal="120dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="6dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/bookImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    loadUrl="@{activity.book.bookCoverImageUrl}"
                    android:src="@drawable/ex_book2"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/bookName"
            android:layout_marginTop="320dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:textSize="20sp"
            android:text="@{String.valueOf(activity.book.title)}"
            android:maxLines="3"
            android:ems="36"
            android:textColor="@color/white"
            android:fontFamily="@font/jua_regular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/jua_regular"
                android:text="@{String.valueOf(activity.book.author[0])}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua_regular"
                android:textSize="15sp"
                android:text="     |     "/>

            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua_regular"
                android:textSize="15sp"
                android:text="@{String.valueOf(activity.book.publisher)}"/>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bookheart_empty"
            android:layout_marginTop="430dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:src="@drawable/addreadbook_btn"
            android:layout_marginTop="500dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:src="@drawable/addreadingbook_btn"
            android:layout_marginTop="550dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:src="@drawable/findchatroom_btn"
            android:layout_marginTop="600dp"
            android:layout_gravity="center_horizontal"/>

    </FrameLayout>

</layout>
