<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="com.example.bookchat.viewmodel.SearchViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bookHeaderLayout"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.isSearchResultEmpty ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:elegantTextHeight="true"
                    android:text="@string/book"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:onClick="@{() -> viewmodel.clickBookDetailBtn()}"
                    android:src="@drawable/ic_open_page_input_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/textView21"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView21" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                setProgressBarVisibility="@{viewmodel.resultLoadState}"
                app:layout_constraintBottom_toBottomOf="@+id/search_result_book_simple_Rcv"
                app:layout_constraintEnd_toEndOf="@+id/search_result_book_simple_Rcv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/search_result_book_simple_Rcv" />

            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintEnd_toEndOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintStart_toStartOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintTop_toTopOf="@+id/search_result_chatRoom_simple_Rcv" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_result_book_simple_Rcv"
                setItem="@{viewmodel.simpleBooksearchResult}"
                setRcvVisibility="@{viewmodel.resultLoadState}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="24dp"
                android:minHeight="200dp"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookHeaderLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/chatRoomHeaderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:visibility="@{viewmodel.isSearchResultEmpty ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/search_result_book_simple_Rcv" >

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="@string/chat_room"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_open_page_input_btn"
                    app:layout_constraintBottom_toBottomOf="@+id/textView24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView24" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_result_chatRoom_simple_Rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="24dp"
                android:minHeight="200dp"
                android:overScrollMode="never"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chatRoomHeaderLayout" />

            <!--채팅방 결과 없으면 노출로 수정 해야함-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="@{viewmodel.isSearchResultEmpty ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintEnd_toEndOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintStart_toStartOf="@+id/search_result_chatRoom_simple_Rcv"
                app:layout_constraintTop_toTopOf="@+id/search_result_chatRoom_simple_Rcv">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="@string/chat_room_result_empty"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center"
                    android:text="@string/chat_room_add_slogan"
                    android:textColor="#222222"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView33"
                    app:layout_constraintStart_toStartOf="@+id/textView33"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/notosanskr_regular"
                    android:textColor="#5648FF"
                    app:cornerRadius="30dp"
                    android:backgroundTint="#FFFFFF"
                    app:strokeColor="#5648FF"
                    app:strokeWidth="1dp"
                    android:stateListAnimator="@null"
                    android:textSize="12sp"
                    android:text="@string/add"
                    app:layout_constraintEnd_toEndOf="@+id/textView34"
                    app:layout_constraintStart_toStartOf="@+id/textView34"
                    app:layout_constraintTop_toBottomOf="@+id/textView34" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/empty_result_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:src="@drawable/empty_result_fox"
                android:visibility="@{viewmodel.isSearchResultEmpty ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/empty_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanskr_regular"
                android:text="@string/search_book_result_empty"
                android:textColor="#222222"
                android:textSize="14sp"
                android:visibility="@{viewmodel.isSearchResultEmpty ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/empty_result_img"
                app:layout_constraintStart_toStartOf="@+id/empty_result_img"
                app:layout_constraintTop_toBottomOf="@+id/empty_result_img" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>
