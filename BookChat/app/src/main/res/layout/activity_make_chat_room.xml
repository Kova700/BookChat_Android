<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.example.bookchat.viewmodel.MakeChatRoomViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.MakeChatRoomActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="30dp"/>

        <com.example.bookchat.AntiDupClickImageButton
            android:id="@+id/antiDupClickImageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/x_icon"
            android:onClick="@{() -> viewmodel.clickXBtn()}"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="@+id/guideline_top" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_bold"
            android:text="@string/make_chat_room"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/antiDupClickImageButton6"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toTopOf="@+id/guideline_top" />

        <!--채팅방 제목, 태그 , 도서 선택되면 활성화 아니면 비활성화-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintTop_toTopOf="@+id/textView30" />

        <androidx.cardview.widget.CardView
            android:id="@+id/chat_room_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/textView30">

            <!--이거 이미지 랜덤으로 나오게 설정해야함-->
            <!--크기 고정적 혹은 동적 설정 결정-->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/default_chat_room_img1" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@drawable/getpicture_btn_back"
            android:baselineAlignBottom="true"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/chat_room_iv"
            app:layout_constraintEnd_toEndOf="@+id/chat_room_iv"
            app:layout_constraintStart_toEndOf="@+id/chat_room_iv"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_iv"
            app:srcCompat="@drawable/ic_getpicture_btn" />

        <EditText
            android:id="@+id/agonyTitleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_bold"
            android:hint="@string/make_chat_room_title_hint"
            android:text="@={viewmodel.chatRoomTitle}"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton5"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_iv" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:onClick="@{() -> viewmodel.clickDeleteTextBtn()}"
            android:visibility="@{viewmodel.chatRoomTitle.length() == 0 ? View.GONE : View.VISIBLE}"
            android:src="@drawable/ic_text_delete_btn"
            app:layout_constraintBottom_toTopOf="@+id/underlineView"
            app:layout_constraintEnd_toStartOf="@+id/textView41"
            app:layout_constraintTop_toTopOf="@+id/agonyTitleEditText" />

        <!--현재 입력된 Text개수 카운팅-->
        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:text="@{String.valueOf(viewmodel.chatRoomTitle.length()) + '/' + String.valueOf(20)}"
            android:textColor="#303030"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/underlineView"
            app:layout_constraintEnd_toEndOf="@+id/underlineView"
            app:layout_constraintTop_toTopOf="@+id/agonyTitleEditText" />

        <View
            android:id="@+id/underlineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:background="#373737"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/agonyTitleEditText" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/make_chat_room_tag_hint"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/underlineView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
