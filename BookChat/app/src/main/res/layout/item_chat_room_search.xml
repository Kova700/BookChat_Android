<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="searchChatRoomListItem"
            type="com.example.bookchat.data.SearchChatRoomListItem" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--동적으로 크기 수정 예정-->
            <ImageView
                android:id="@+id/bookImg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="#D9D9D9"
                android:scaleType="fitXY"
                defaultImgNum="@{searchChatRoomListItem.defaultRoomImageType}"
                imgUrl="@{searchChatRoomListItem.roomImageUri}"
                android:src="@drawable/default_chat_room_img1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/chat_room_title_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="#222222"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{searchChatRoomListItem.roomName}"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <TextView
            android:id="@+id/chat_room_tags_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:textColor="#373737"
            android:textSize="12sp"
            android:text="@{searchChatRoomListItem.tags}"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_title_et" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:elegantTextHeight="true"
            android:maxLines="1"
            android:text="@{String.valueOf(searchChatRoomListItem.roomMemberCount) +'명'}"
            android:textColor="#373737"
            android:textSize="10sp"
            android:fontFamily="@font/notosanskr_regular"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/view4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_tags_tv" />

        <View
            android:id="@+id/view4"
            android:layout_marginEnd="5dp"
            android:background="#D9D9D9"
            android:layout_width="1dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView42"
            app:layout_constraintEnd_toStartOf="@+id/textView43"
            app:layout_constraintStart_toEndOf="@+id/textView42"
            app:layout_constraintTop_toTopOf="@+id/textView42" />

        <!--수정필요-->
        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elegantTextHeight="true"
            android:fontFamily="@font/notosanskr_regular"
            android:maxLines="1"
            android:text="@{searchChatRoomListItem.lastActiveTime}"
            android:textColor="#373737"
            android:textSize="10sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/view4"
            app:layout_constraintTop_toBottomOf="@+id/chat_room_tags_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
