<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/background_agony_edit_folder_cv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="124dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_agony_edit_folder_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:elegantTextHeight="true"
        android:elevation="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosanskr_bold"
        android:gravity="start"
        android:textColor="#222222"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/background_agony_edit_folder_cv"
        app:layout_constraintEnd_toEndOf="@+id/background_agony_edit_folder_cv"
        app:layout_constraintStart_toStartOf="@+id/background_agony_edit_folder_cv"
        app:layout_constraintTop_toTopOf="@+id/background_agony_edit_folder_cv" />

    <ImageView
        android:id="@+id/agony_folder_check_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/item_check_icon"
        app:layout_constraintBottom_toBottomOf="@+id/background_agony_edit_folder_cv"
        app:layout_constraintEnd_toEndOf="@+id/background_agony_edit_folder_cv" />
</androidx.constraintlayout.widget.ConstraintLayout>